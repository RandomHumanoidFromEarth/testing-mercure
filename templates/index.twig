{% block javascripts %}
    <script>
        const eventSource = new EventSource("{{ mercure('*')|escape('js') }}");
        eventSource.onmessage = event => {
            // Will be called every time an update is published by the server
            console.log(JSON.parse(event.data));
            alert(event.data);
        }
    </script>
{% endblock %}
